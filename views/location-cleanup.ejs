<%- include('_header'); -%>

<div class="columns is-variable is-4-mobile is-4-tablet is-block-print" id="is-site-layout">
  <%- include("_sideMenu-locations"); -%>
  <div class="column">
    <nav class="breadcrumb">
      <ul>
        <li><a href="/dashboard">Home</a></li>
        <li><a href="/locations">
          <span class="icon is-small"><i class="fas fa-map-marker-alt" aria-hidden="true"></i></span>
          <span>Locations</span>
        </a></li>
        <li class="is-active"><a href="#" aria-current="page">Location Cleanup</a></li>
      </ul>
    </nav>

    <h1 class="title is-1">
      Location Cleanup
    </h1>

    <div class="message is-info">
      <div class="message-body">
        Location Cleanup lists locations with no recent licence activity.
        Removing locations that are no longer used helps simplify location lists.
      </div>
    </div>

    <div class="box">
      <div class="columns is-vcentered">
        <div class="column is-narrow">
          <label class="label" for="filter--inactiveYears">Minimum Years of Inactivity</label>
        </div>
        <div class="column">
          <div class="control has-icons-left">
            <div class="select">
              <select id="filter--inactiveYears">
                <% for (let i = 5; i >= 2; i--) { %>
                  <option value="<%= i %>">
                    <%= i %> Years
                  </option>
                <% } %>
                <option value="1">1 Year</option>
              </select>
            </div>
            <span class="icon is-small is-left">
              <i class="fas fa-filter" aria-hidden="true"></i>
            </span>
          </div>
        </div>
      </div>
    </div>

    <div id="container--searchResults"></div>
  </div>
</div>

<%- include('_footerA'); -%>

<script src="/javascripts/location-cleanup.min.js"></script>

<%- include('_footerB'); -%>
