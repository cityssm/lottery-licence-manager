<div class="tabs is-boxed" id="tabs--reports">
  <ul>
    <li class="is-active">
      <a href="#tab--organizationReports">
        <span class="icon">
          <i class="fas fa-users" aria-hidden="true"></i>
        </span>
        <span>Organizations</span>
      </a>
    </li>
    <li>
      <a href="#tab--licenceReports">
        <span class="icon">
          <i class="fas fa-certificate" aria-hidden="true"></i>
        </span>
        <span>Licences</span>
      </a>
    </li>
    <li>
      <a href="#tab--transactionReports">
        <span class="icon">
          <i class="fas fa-dollar-sign" aria-hidden="true"></i>
        </span>
