<div class="panel">
  <div class="panel-heading">
    <div class="level">
      <div class="level-left">
        <h2 class="has-text-weight-bold">Bank Records</h2>
      </div>
      <div class="level-right has-text-weight-normal is-hidden-print">
        <div class="field is-grouped justify-flex-end">
          <% if (user.userProperties.canCreate === "true") { %>
            <button class="button is-small is-primary is-hidden-status-view" type="button">
              <span class="icon">
                <i class="fas fa-plus" aria-hidden="true"></i>
              </span>
              <span>Add a Bank Record</span>
            </button>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-block is-block">
    <div class="columns">
      <div class="column">
        <div class="field">
          <label class="label" for="bankRecordFilter--accountNumber">Account Number</label>
          <div class="control">
            <div class="select is-fullwidth">
              <select id="bankRecordFilter--accountNumber">
                <option value="">(None Selected)</option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <div class="column">
        <div class="field">
          <label class="label" for="bankRecordFilter--bankingYear">Banking Year</label>
          <div class="control">
            <div class="select is-fullwidth">
              <select id="bankRecordFilter--bankingYear">
                <%
                const currentYear = new Date().getFullYear();
                %>
                <option value="<%= currentYear %>"><%= currentYear %></option>
              </select>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <table class="table is-fullwidth is-striped is-hoverable has-status-loading" id="table--bankRecords" data-organization-id="<%= organization.organizationID %>">
    <thead>
      <tr>
        <th>Month</th>
        <%
        const bankRecordTypes = configFns.getProperty("bankRecordTypes");
        for (let recordTypeIndex = 0; recordTypeIndex < bankRecordTypes.length; recordTypeIndex += 1) {
          %>
          <th class="has-text-centered"><%= bankRecordTypes[recordTypeIndex].bankRecordTypeName %></th>
          <%
        }
        %>
      </tr>
    </thead>
    <tbody>
      <% for (let monthIndex = 0; monthIndex <= 11; monthIndex += 1) { %>
        <tr data-banking-month="<%= (monthIndex + 1) %>">
          <th><%= dateTimeFns.months[monthIndex] %></th>
          <% for (let recordTypeIndex = 0; recordTypeIndex < bankRecordTypes.length; recordTypeIndex += 1) { %>
            <td class="has-text-centered">
              <span class="icon is-hidden-status-loaded">
                <i class="fas fa-circle-notch fa-spin has-text-grey-lighter" aria-hidden="true"></i>
              </span>
              <span class="is-hidden-status-loading is-bank-record-container" data-bank-record-type="<%= bankRecordTypes[recordTypeIndex].bankRecordType %>">
              </span>
            </td>
          <% } %>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
