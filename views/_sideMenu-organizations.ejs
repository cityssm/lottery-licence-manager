<nav class="panel">
  <div class="panel-heading">
    Organizations
  </div>
  <% if (user.userProperties.canCreate) { %>
    <div class="panel-block">
      <a class="button is-primary is-fullwidth" href="/organizations/new">
        <span class="icon is-small">
          <i class="fas fa-plus" aria-hidden="true"></i>
        </span>
        <span>Create a New Organization</span>
      </a>
    </div>
  <% } %>
  <a class="panel-block <%= (headTitle === "Organizations" ? " is-active" : "") %>" href="/organizations">
    <span class="panel-icon">
      <i class="fas fa-users" aria-hidden="true"></i>
    </span>
    Organization Search
  </a>
  <% if (user.userProperties.canUpdate) { %>
    <a class="panel-block <%= (headTitle === "Organization Cleanup" ? " is-active" : "") %>" href="/organizations/cleanup">
      <span class="panel-icon">
        <i class="fas fa-broom" aria-hidden="true"></i>
      </span>
      Organization Cleanup
    </a>
  <% } %>
  <% if (user.userProperties.isAdmin) { %>
    <a class="panel-block <%= (headTitle === "Organization Recovery" ? " is-active" : "") %>" href="/organizations/recovery">
      <span class="panel-icon">
        <i class="fas fa-trash-restore" aria-hidden="true"></i>
      </span>
      Organization Recovery
    </a>
  <% } %>
</nav>
