<%- include('_header'); -%>

<div class="level">
  <div class="level-left">
    <h1 class="title">
      Find an Organization
    </h1>
  </div>
  <% if (user.userProperties.organizations_canEdit === "true") { %>
    <div class="level-right">
      <a class="button is-primary" href="/organizations/new">
        <span class="icon is-small">
          <i class="fas fa-plus"></i>
        </span>
        <span>Create a New Organization</span>
      </a>
    </div>
  <% } %>
</div>

<div class="columns">
  <div class="column is-one-third">
    <form id="form--filters">
      <div class="field">
        <label class="label" for="filter--organizationName">Organization Name</label>
        <div class="control">
          <input class="input" id="filter--organizationName" name="organizationName" type="text" />
        </div>
      </div>
    </form>
  </div>
  <div class="column">
    <div id="container--searchResults"></div>
  </div>
</div>

<%- include('_footerA'); -%>

<script src="/javascripts/organization-search.min.js"></script>

<%- include('_footerB'); -%>
